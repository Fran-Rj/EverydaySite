@model List<Everyday.Models.Producto>

@{
    ViewBag.Title = "Shirts";
    Layout = null;
}

<style>
    #btnLink {
        text-decoration: none;
        color: black;
        font-size: 20px;
        background-color: rebeccapurple;
    }

    #btnLink:hover {
        text-decoration: none;
        color: dodgerblue;
    }

    #btn {
        border: none;
        background-color: gold;
        width: 100px;
        height: 40px;
        border-radius: 5px;
        cursor: pointer;
    }

    a {
        font-size: 20px;
        font-weight: bold;
        text-decoration: none;
        color: black;
    }

    a:hover {
        text-decoration: none;
        color: blue;
    }
</style>

<h2 style="margin-left:50px;">Camisas</h2>
<div class="container" style="display: flex; background-color: red;  height: 220px;">
    @foreach (var item in Model)
    {
        <div style="margin:15px;">
            <div style="text-align:center; background-color: transparent; width: 100%; height: 250px;">
                <a href="@Url.Action("Description", "Categoria", new { Id = item.idProd })" target="_blank">
                    <img id="imgProd"  src="@Url.Action("MostrarImagen", "Producto", new { Id = item.idProd })" alt="..." style="width:150px; height:150px; border-radius:10px;" />
                </a>
                <br /><br />
                @Html.ActionLink(item.nameProd, "Description", new { Id = item.idProd }, htmlAttributes: new { target = "_blank" })
            </div>
        </div>
    }
</div>
