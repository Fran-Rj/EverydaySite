    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .navbar {
            width: 1290px;
        }

        .container {
            margin-left: 0;
            width: 1290px;
        }

        .navbar-brand {
            margin-left: 15px;
            font-size: 30px;
