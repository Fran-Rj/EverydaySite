@model Everyday.Models.Producto

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #btnX {
        position: absolute;
        top: 18%;
        left: 90%;
        transform: translate(-18% -90%)
    }

    #btnBack {
        text-decoration: none;
        font-weight: bold;
    }

    label {
        font-weight: bold;
        font-size: 20px;
    }

    div {
        font-size: 20px;
    }

    #btnEliminar {
        position: absolute;
        top: 85%;
        left: 50%;
        transform: translate(-85% -50%)
    }
</style>

<br />
<div class="container text-danger" style="margin:auto; text-align:center;">
    <h4>¿Quieres eliminar el registro?</h4>
</div>
<div style="margin:auto; border-radius: 10px; justify-content:space-between; display:flex; background-color:transparent;" class="container">
    <div id="box-img" style="text-align: center; background-color: transparent; padding: 10px; width:400px; height: 500px">
        <br /><br />
        <div>
            <img id="imgProd" src="@Url.Action("MostrarImagen",  "Producto", new { Id = Model.idProd })" style="border-radius:10px; width: 350px; height:350px;" alt="None..." />
        </div>
    </div>

    <div style="justify-content: center; display: flex; background-color: transparent; width: 650px; height: 500px;">
        <div style="justify-content:space-between; width: 400px; height: 400px; border-radius: 7px; background-color: transparent;">
            <br /><br />
            <div>
                <label>Nombre</label>
                <div>
                    @Html.DisplayFor(model => model.nameProd, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div>
                <br />
                <label>Descripción</label>
                <div>
                    @Html.DisplayFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div>
                <br />
                <label>Precio</label>
                <div>
                    @Html.DisplayFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div>
                <br />
                <label>Stock</label>
                <div>
                    @Html.DisplayFor(model => model.stock, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>
        <div style="background-color: transparent; border-radius: 7px; width: 400px; height: 400px; ">
            <br /><br />
            <div>
                <label>Estado</label>
                <div>
                    @Html.DisplayFor(model => model.state, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div>
                <br />
                <label>Tipo</label>
                <div>
                    @Html.DisplayFor(model => model.Tipo.nameType, null, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div>
                <br />
                <label>Marca</label>
                <div>
                    @Html.DisplayFor(model => model.Marca.nameMarc, null, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div style="background-color: transparent;">
                <br />
                <label>Categoria</label>
                <div>
                    @Html.DisplayFor(model => model.Categoria.nameCateg, null, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>
    </div>
    <div id="btnX">
        @Html.ActionLink("x", "Index", null, htmlAttributes: new { id = "btnBack" })
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="btnEliminar">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </div>
}