@model IEnumerable<Everyday.Models.Producto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    a {
        text-decoration: none;
    }
</style>

<br />
<div style="width:1200px; margin:auto;">
    <p>
        @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-success" })
    </p>
    <table class="table table-bordered">
        <tr>
            <th>
                Imagen
            </th>
            <th>
                Nombre
            </th>
            <th>
                Descripción
            </th>
            <th>
                Precio
            </th>
            <th>
                Stock
            </th>
            <th>
                Estado
            </th>
            <th>
                Creado
            </th>
            <th>
                Categoria
            </th>
            <th>
                Marca
            </th>
            <th>
                Tipo
            </th>
            <th>
                Acciones
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div>
                        <img id="imgProd" src="@Url.Action("MostrarImagen",  "Producto", new { Id = item.idProd })" style="width: 100px; height:100px; border-radius: 5px;" alt="None..." />
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nameProd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    $ @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.state)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.createdAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.nameCateg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca.nameMarc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo.nameType)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idProd }, new { style = "color: #0094ff" }) <br />
                    @Html.ActionLink("Detalles", "Details", new { id = item.idProd }, new { style = "color: #08cb4e" }) <br />
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idProd }, new { style = "color: red" }) <br />
                </td>
            </tr>
        }

    </table>
</div>