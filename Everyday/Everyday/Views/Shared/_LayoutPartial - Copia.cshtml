
<style>
    #menuDesplegable:focus {
        outline: none;
        border: none;
        text-decoration: none;
    }
</style>

@{
    string vistaActual = ViewBag.vistaActual;
}

<ul class="navbar-nav" style="margin-top: 8px; text-decoration:none; border:none;">
    <li style="background-color:transparent; color: black; font-size: 20px;">
        @*@if (vistaActual == "Show" || vistaActual == "Camisas" || vistaActual == "Pantalones")
        {*@
            <input id="btnCategorias" style="background-color: transparent; font-size: 20px; border: none;" type="button" value="Categorias" />           
            <select id="menuDesplegable" style="background-color: transparent; width: 15px; border: none; text-decoration: none;">
                <option style="display: none; background-color: rgba(240, 240, 240, 0.5);" value="">Categorias</option>
                @{
                    using (Everyday.Models.EverydayDB db = new Everyday.Models.EverydayDB())
                    {
                        foreach (var item in db.Categoria)
                        {
                            <option style="background-color: rgba(240, 240, 240, 0.5);" value="@item.idCateg">@item.nameCateg</option>
                        }
                    }
                }
            </select>

            <script>
                // REDIRECCIONAR
                var menu = document.getElementById("menuDesplegable");

                menu.addEventListener("change", function () {
                    var selectedOption = menu.options[menu.selectedIndex].value;

                    if (selectedOption === "1") {
                        //window.location.href = "https://localhost:44344/Categoria/Camisas";
                    }
                    if (selectedOption === "3") {
                        window.location.href = "https://localhost:44344/Categoria/Camisas";
                    }
                    else if (selectedOption === "4") {
                        window.location.href = "https://localhost:44344/Categoria/Pantalones";
                    } else if (selectedOption === "5") {
                        window.location.href = "";
                    }
                })
            </script>
        @*}
        else
        {
            <input id="btnCategorias" style="background-color: transparent; font-size: 20px; border: none;" type="button" value="Categorias" />
        }*@
    </li>
</ul>

<script>
     // TODAS LAS CATEGORIAS
    var boton = document.getElementById("btnCategorias");

    boton.addEventListener("click", function () {
        window.location.href = "https://localhost:44344/Categoria/Show";
    });
</script>