<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Everyday</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .navbar {
            width: 1290px;
        }

        .container {
            margin-left: 0;
            width: 1290px;
        }

        .navbar-brand {
            margin-left: 15px;
            font-size: 30px;
            font-weight: bold;
        }

        .nav-link, a {
            color: black;
            font-size: 20px;
        }   
    </style>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <div class="container-fluid">
            @Html.ActionLink("Everyday", "Home", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <img src="~/Image/Logo.png" style="margin-top:10px;"/>
            <div class="collapse navbar-collapse" id="navbarScroll">
                <ul class="navbar-nav me-5 my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                    <li style="margin-left: 40px;">@Html.ActionLink("Principal", "Home", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li style="margin-left: 40px;">
                    <li>                      
                        @Html.Partial("_LayoutPartial")
                    </li>
                    <li style="margin-left:40px;">
                        @Html.ActionLink("Nosotros", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control" type="search" style="width:300px;" placeholder="Buscar" aria-label="Search">
                    @*<button class="btn btn-outline-success" type="submit">Search</button>*@
                </form>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
        @*<hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Everyday</p>
            </footer>*@
    </div>
    <script src="~/Models/JavaScript.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>