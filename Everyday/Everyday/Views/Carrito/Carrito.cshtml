@*@model IEnumerable<Everyday.Models.Carrito>*@

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>
    Productos en carrito
</h4>

<table class="table">
    <thead>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Cantidad</th>
        <th>Total</th>
        <th></th>
    </thead>
    <tbody>
        @{ 
            double total = 0;
        }

        @if (Session["carrito"] != null)
        {
            foreach (var item in Session["carrito"] as List<Everyday.Models.CarritoItem>)
            {
                total += (double)(item.cantidad * item.Producto.price);
                <tr>
                    <td>
                        @item.Producto.description
                    </td>
                    <td>
                        $ @item.Producto.price
                    </td>
                    <td>
                        @item.cantidad
                    </td>
                    <td>
                        @String.Format("{0:C}", (item.cantidad * item.Producto.price))
                    </td>
                    <td>
                        @Html.ActionLink("Eliminar", "Delete", "Carrito", new { id = item.Producto.idProd })
                    </td>
                </tr>
            }
         }   
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">Total</th>
            <th>@String.Format("{0:C}", total)</th>
        </tr>
    </tfoot>
</table>

