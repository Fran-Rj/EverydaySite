@model List<Everyday.Models.Producto>

@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    a {
        font-size: 20px;
        font-weight: bold;
        text-decoration: none;
        color: black;
    }

    a:hover {
        text-decoration: none;
        color: blue;
    }
</style>

<div style="margin: auto;">
    @Html.ActionLink("Volver", "Home", "Home", null, new { @class = "btn btn-warning", @style = "float: right; margin-right: 20px;" })
</div>
<div style="display: flex; flex-wrap: wrap; background-color: transparent; overflow: auto; margin: auto; justify-content: space-between; width: 1280px; height: 550px;">
    @foreach (var item in Model)
    {
        <div style="background-color: transparent; margin: auto;">
            <div style="background-color: transparent; text-align: center; justify-content: space-between; margin: auto;">
                <a href="@Url.Action("Description", "Categoria", new { Id = item.idProd })">
                    <img src="@Url.Action("MostrarImagen", "Producto", new { Id = item.idProd })" alt="..." id="imgUser" style="width:200px; height:200px; border-radius:10px;" />
                </a>
                <br /><br />
                @Html.ActionLink(item.nameProd, "Description", "Categoria", new { Id = item.idProd }, null)
            </div>
        </div>

    }
</div>