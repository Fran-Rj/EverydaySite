@model List<Everyday.Models.Producto>

@{
    ViewBag.Title = "Pantalones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    a {
        font-size: 21px;
        font-weight: bold;
        text-decoration: none;
        color:black;
    }

    a:hover {
        text-decoration: none;
        color: blue;
    }
</style>

<h2 style="margin-left:50px;">Pantalones</h2>
<div style="display: flex; flex-wrap: wrap; background-color: transparent; width: 1290px; height: 300px;">
    @foreach (var item in Model)
    {
        <div style="margin:15px;">
            <div style="text-align:center; background-color: transparent; width: 100%; height: 250px;">
                <img src="@Url.Action("MostrarImagen", "Producto", new { Id = item.idProd })" alt="..." id="imgUser" style="width:150px; height:150px; border-radius:10px;" />
                <br /><br />
                @Html.ActionLink(item.description, "Description", new { Id = item.idProd })
            </div>
        </div>
    }
</div>

<script src="~/Models/JavaScript.js"></script>