@model Everyday.Models.Producto

@{
    ViewBag.Title = "Description";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style >
    body {
        background-color: transparent;
        margin: 0;
        padding: 0;
    }

    #img {
        width: 290px;
        height: 300px;
        border-radius: 10px;
        margin: 3px 2px auto;
    }

    .box-image {
        width: 295px;
        height:305px;
        background-color: transparent;
    }

    .box-datos {
        padding: 15px;
        background-color: transparent;
        font-size: 20px;
        width: 350px;
        margin-left: 40px;
        height: 305px;
    }

    #btnLink {
        text-decoration: none;
        color: black;
        font-size: 20px;
        background-color: rebeccapurple;
    }

    #btnLink:hover {
        text-decoration: none;
        color: dodgerblue;
    }
</style>


<div style="display: flex; width:100%; height:585px; background-color: transparent; margin:0; padding:0;">
    <div style="background-color: transparent; margin-left:145px; text-align:center; display:block;">
        <label style="margin-top:50%; font-weight:bold; font-size: 70px">TUS</label>
        <br /><br />
        <label style="font-weight:bold; font-size: 70px">PRENDAS</label>
    </div>
    <div class="box-image" style="background-color: transparent; margin-left: 145px; margin-top: 7%; text-align: center;">
        <img src="@Url.Action("MostrarImagen", "Producto", new { Id = Model.idProd })" alt="None..." id="img" />
        <br /><br />
        <label style="font-size: 30px">@Html.DisplayFor(p => p.nameProd)</label>
    </div>
    <div class="box-datos" style="margin-top: 7%;">
        <label style="font-weight: bold;">Descripción</label>
        <br />
        @Html.DisplayFor(p => p.description)
        <br /><br />
        <label style="font-weight: bold;">Precio</label>
        <br />
         $ @Html.DisplayFor(p => p.price)
        <br /><br />
        <label style="font-weight: bold;">Marca</label>
        <br />
        @Html.DisplayFor(p => p.Marca.nameMarc)
        <br /><br />
        <input style="width:200px; height:40px; border:none; border-radius: 5px; background-color: black; color: white;" type="button" value="Comprar"/>
    </div>
</div>

