@model Everyday.Models.Categoria

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #nameCateg, select, textarea {
         max-width: 400px; 
    }

    #nameCateg {
        width: 400px;
        height: 40px;
        font-size: 18px;
    }

    #nameCateg:focus {
        outline: none;
    }

    label {
        font-size: 20px;
    }
</style>

<br /><br />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div style="margin: auto;" class="container card">
        <br />
        <h4>Categoria</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div>
            <label>Categoria</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nameCateg, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nameCateg, "", new { @class = "text-danger" })
            </div>
        </div>
        <br /><br />
        <div style="display:flex; justify-content: space-between;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
            <div>
                @Html.ActionLink("Volver", "Index", null, htmlAttributes: new { @class = "btn btn-warning" })
            </div>
        </div>
        <br />
    </div>
}
