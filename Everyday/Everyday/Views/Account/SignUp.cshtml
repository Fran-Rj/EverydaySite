@model Everyday.Models.Usuario

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: White;
    }

    /* Formulario */
    .texto {
        margin-top: 0;
        font-weight: bold;
        text-align: center;
        font-family: 'Book Antiqua';
        color: white;
    }

    .Formulario-box {
        margin: auto;
        border-radius: 7px;
        box-sizing: border-box;
        background-color: transparent;
        font-family: 'Book Antiqua';
        font-size: 20px;
        color: black;
        width: 330px;
        height: 320px;
        padding: 15px;      
    }

    input {
        margin-bottom: 10px;
    }

    #box-btnAceptar {
        margin-top: 20px;
        text-align: center;
    }

    #btnEnviar {
        cursor: pointer;
        border-radius: 5px;
        background-color: #FECA76;
        color: black;
        width: 100px;
        height: 43px;
        font-weight: bold;
        font-size: 20px;
        border: none;
        margin-right: 20px;
        /*margin: 0px 0px 15px 0px;*/ /* 0px Arriba, 0px Izquierda, 10px Abajo, 0px Derecha*/
    }

    #imgUser {
        width: 200px;
        height: 200px;
        margin-top: 5px;
    }

    .form-group {
        background-color: transparent;
    }

    .inputs {
        width: 100%;
    }

    #nombre, #email, #clave {
        font-size: 20px;
    }

    #box-btnFile {
        margin-top: 10px;
    }

    .container1 {
        width: 700px;
        display: flex;
        margin: auto;
        border-radius: 7px;
        box-sizing: border-box;
        background-color: transparent;
    }

    #box-imagen {
        text-align: center;
    }

    #lblNombre {
        margin-top: 10px;
    }

    span {
        font-size: 20px;
        font-weight: bold;
        font-family: 'Book Antiqua';
    }
</style>

<body>
    <div class="container">
        @using (Html.BeginForm("SignUp", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
         {
            @Html.AntiForgeryToken()

            <div class="container1">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })               
                @*<div class="Formulario-box" id="box-imagen">
                    <label>Imagen</label>
                    <div class="form-control">
                        <img src="~/Imagenes/User.png" id="imgUser" />
                        @Html.ValidationMessageFor(u => u.imagen, "", new { @class = "text-danger" })
                    </div>
                    <div id="box-btnFile">
                        <input type="file" name="File" onchange="mostrarimagen(this)" />
                    </div>
                    <span class="text-danger">@Error</span>
                </div>*@
                <div class="Formulario-box" id="box-datos">
                    <div class="form-group" id="lblNombre">
                        <label>Nombre</label>
                        <div class="inputs">
                            @Html.EditorFor(u => u.nameUser, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(u => u.nameUser, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Género</label>
                        <div class="inputs">
                            @Html.EditorFor(u => u.gender, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(u => u.gender, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Correo</label>
                        <div class="inputs">
                            @Html.EditorFor(u => u.email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(u => u.email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Contraseña</label>
                        <div class="inputs">
                            @Html.EditorFor(u => u.keyUser, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(u => u.keyUser, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div id="box-btnAceptar">
                        <input type="submit" value="Aceptar" id="btnEnviar" />
                    </div>
                </div>
            </div>
         }

        <button class="btn btn-warning">
            @Html.ActionLink("Volver", "Login")
        <button/>
    </div>
</body>