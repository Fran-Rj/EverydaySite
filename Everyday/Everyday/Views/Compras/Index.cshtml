@model List<Everyday.Models.DetalleVenta>

@{
    ViewBag.Title = "Compras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    if(Session["user"] != null)
    {
        <br />
        <div class="container" style="margin:auto;">
            <table class="table table-bordered">
                <tr>
                    <th>
                        Descripción
                    </th>
                    <th>
                        Precio
                    </th>
                    <th>
                        Cantidad
                    </th>
                    <th>
                        Sub Total
                    </th>
                    <th>
                        Total
                    </th>
                    <th>
                        Fecha
                    </th>
                </tr>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td> 
                                <div style="display: flex;">
                                    <img id="imgProd" src="@Url.Action("MostrarImagen",  "Producto", new { Id = item.idProd })" style="width: 100px; height:100px; border-radius: 5px;" alt="None..." />
                                    <div style="margin-left: 20px;">
                                        @item.Producto.description
                                    </div>
                                </div>
                            </td>
                            <td>
                                @item.price
                            </td>
                            <td>
                                @item.quantity
                            </td>
                            <td>
                                @item.subTotal
                            </td>
                            <td>
                                @item.Venta.total
                            </td>
                            <td>
                                @item.Venta.createdAt
                            </td>
                        </tr>
                    }
                }

            </table>
        </div>
    }
    else
    {
        <div class="container" style="text-align: center; margin: 200px auto;">
            <h3>Inicia sesión</h3>
        </div>
    }
    
}